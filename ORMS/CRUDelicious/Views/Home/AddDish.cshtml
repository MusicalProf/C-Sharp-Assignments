@{
ViewData["Title"] = "Add A Dish";
}

@model Dish
<div class="container">
    <h1 class="display text-center">Add a Dish</h1>
    <hr>
    <br><br>
    <form asp-action="AddMethod" method="POST">
        <div class="row">
            <div class="col-form-group">
                <label asp-for="Chef"></label>
                <input asp-for="Chef" class="form-control">
                <span class="text-danger" asp-validation-for="Chef"></span><br>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span><br>
                <label asp-for="Calories"></label>
                <input asp-for="Calories" class="form-control">
                <span class="text-danger" asp-validation-for="Calories"></span><br>
            </div>
            <div class="col form-group">
                <label asp-for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness" class="form-control">
                    <option value="">Select:</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span class="text-danger" asp-validation-for="Tastiness"></span><br>
            </div>
            <div class="col form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" cols="20" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <br>
                <input type="submit" value="Add Dish" class="btn btn-primary btn-outline info">
            </div>
        </div>
    </form>
</div>