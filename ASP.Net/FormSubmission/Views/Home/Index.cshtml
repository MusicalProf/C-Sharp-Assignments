@{
ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <h3 class="display-6">Please Register your info below!</h3>
    <hr>
</div>

@model User
<form asp-action="Create" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control col-6">
        <span class="text-danger" asp-validation-for="FirstName"></span><br><br>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control col-6">
        <span class="text-danger" asp-validation-for="LastName"></span><br><br>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control col-6">
        <span class="text-danger" asp-validation-for="Age"></span><br><br>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control col-6">
        <span class="text-danger" asp-validation-for="Email"></span><br><br>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control col-6">
        <span class="text-danger" asp-validation-for="Password"></span><br><br>
        <input type="submit" value="Add User" class="btn btn-primary">
    </div>
</form>